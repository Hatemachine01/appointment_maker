<h1> <% @conversation.subject  %>  </h1>


<% @conversation.receipts_for(current_user).each do |receipt| %>
<div>
<div>
<%= receipt.message.sender.name %> commented: </div>
<p> <%= receipt.message.body  %> </p>
</div>
<% end %>

<%= link_to 'Back to Mailbox', conversation_index_path , class: "btn btn-success"  %>


<%= form_tag conversation_messages_path(@conversation) , method: :post do %>
	<div>
		
	<%= text_area_tag :body %>

	</div>

	<%= submit_tag "Send" , class: "btn-success" %>

	<% end %>
