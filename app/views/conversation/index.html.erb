    <td><%= link_to 'Move to trash', trash_conversation_index_path(conversation.id) , class: "btn-danger btn-sm" %> </td>
    <td> <%= link_to "View/Reply", conversation_path(conversation), class: "btn btn-primary btn-sm" %></td>
    
</tr>
<% end %>
</table>

   <div> 
